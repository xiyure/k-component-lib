{
  "name": "DescriptionsItem",
  "props": [
    {
      "displayName": "label",
      "type": "string",
      "description": "标签文本",
      "defaultValue": "''"
    },
    {
      "displayName": "span",
      "type": "number",
      "description": "列的数量",
      "defaultValue": "1"
    },
    {
      "displayName": "width",
      "type": "string / number",
      "description": "列的宽度，不同行相同列的宽度按最大值设定（如无 border ，宽度包含标签与内容）",
      "defaultValue": "''"
    },
    {
      "displayName": "min-width",
      "type": "string / number",
      "description": "列的最小宽度，与 width 的区别是 width 是固定的，min-width 会把剩余宽度按比例分配给设置了 min-width 的列（如无 border，宽度包含标签与内容）",
      "defaultValue": "''"
    },
    {
      "displayName": "align",
      "type": "enum",
      "description": "列的内容对齐方式（如无 border，对标签和内容均生效）",
      "defaultValue": "left"
    },
    {
      "displayName": "label-align",
      "type": "enum",
      "description": "列的标签对齐方式，若不设置该项，则使用内容的对齐方式（如无 border，请使用 align 参数）",
      "defaultValue": "''"
    },
    {
      "displayName": "class-name",
      "type": "string",
      "description": "列的内容自定义类名",
      "defaultValue": "''"
    },
    {
      "displayName": "label-class-name",
      "type": "string",
      "description": "column label custom class name",
      "defaultValue": "''"
    }
  ],
  "events": [],
  "slots": [
    {
      "displayName": "default",
      "type": "slot",
      "description": "自定义默认内容",
      "defaultValue": "'"
    },
    {
      "displayName": "label",
      "type": "slot",
      "description": "自定义标签",
      "defaultValue": ""
    }
  ],
  "methods": []
}
