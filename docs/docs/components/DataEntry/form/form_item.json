      "defaultValue": "",
      "tip": "'left' | 'right' | 'top'"
    },
    {
      "displayName": "label-width",
      "type": "string | number",
      "description": "标签宽度",
      "defaultValue": "",
      "tip": ""
    },
    {
      "displayName": "required",
      "type": "boolean",
      "description": "是否为必填项",
      "defaultValue": "",
      "tip": ""
    },
    {
      "displayName": "rules",
      "type": "object",
      "description": "表单验证规则",
      "defaultValue": "",
      "tip": "Arrayable<FormItemRule>"
    },
    {
      "displayName": "error",
      "type": "string",
      "description": "表单域验证错误时的提示信息。设置该值会导致表单验证状态变为 error，并显示该错误信息",
      "defaultValue": "",
      "tip": ""
    },
    {
      "displayName": "show-message",
      "type": "boolean",
      "description": "是否显示校验错误信息",
      "defaultValue": "true",
      "tip": ""
