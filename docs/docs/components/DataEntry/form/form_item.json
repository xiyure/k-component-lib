      "description": "校验状态",
      "type": "object",
      "tip": "Ref<'' | 'error' | 'validating' | 'success'>"
    },
    {
      "displayName": "validate",
      "description": "验证表单项",
      "type": "Function",
      "tip": "(trigger: string, callback?: FormValidateCallback | undefined) => FormValidationResult"
