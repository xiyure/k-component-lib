    {
      "displayName": "validate-status",
      "type": "enum",
      "description": "表单域验证状态",
      "defaultValue": "",
      "tip": "'' | 'error' | 'validating' | 'success'"
    },
    {
      "displayName": "for",
      "type": "string",
      "description": "form原生属性",
      "defaultValue": "",
      "tip": ""
    }
  ],
  "events": [],
  "slots": [
    {
      "displayName": "default",
      "description": "表单的内容",
      "parameters": ""
    },
    {
